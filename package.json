{
  "name": "xapi",
  "version": "1.0.0",
  "description": "APIv22 for React/ express",
  "author": "sijan",
  "license": "MIT",
  "config": {
    "validate-commit-msg": {
      "types": [
        "build",
        "chore",
        "ci",
        "cleanup",
        "docs",
        "feat",
        "fix",
        "followup",
        "improve",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "unfeat"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "commitmsg": "validate-commit-msg",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "npm run lint -s -- --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/microservices": "^6.0.3",
    "@nestjs/mongoose": "^6.0.0",
    "@nestjs/platform-fastify": "^6.0.1",
    "@nestjs/swagger": "^3.0.1",
    "@slack/client": "^5.0.0",
    "@slack/events-api": "^2.2.0",
    "@slack/web-api": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.4",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.4.0",
    "helmet": "^3.16.0",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "mongoose": "^5.4.19",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.9",
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.43",
    "@types/jest": "^23.3.1",
    "@types/joi": "^14.3.2",
    "@types/lodash": "^4.14.123",
    "@types/mongoose": "^5.3.23",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "husky": "^1.3.1",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "validate-commit-msg": "^2.14.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
